{
	"name": "client",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build",
		"build:prod": "ng build --prod --aot --build-optimizer",
		"prod:stats": "ng build --prod --aot --build-optimizer --stats-json",
		"prod:details": "webpack-bundle-analyzer ./dist/client/stats.json",
		"deploy:firebase": "firebase deploy",
		"test": "ng test",
		"format": "prettier --single-quote --trailing-comma all --print-width 120 --arrow-parens always --tab-width 4 --write",
		"tslint": "tslint \"src/**/*.ts\"",
		"stylelint": "stylelint \"src/**/*.scss\"",
		"lint": "ng lint \"src/**/*.ts\"",
		"update": "ng update @angular/cli @angular/core",
		"update:cli": "ng update @angular/cli",
		"update:core": "ng update @angular/core",
		"e2e": "ng e2e",
        "resources": "node resources/generate-resources.js",
		"precommit": "lint-staged"
	},
	"lint-staged": {
		"src/**/*.ts": [
			"npm run format",
			"npm run tslint",
			"git add"
		],
		"src/**/*.scss": [
			"npm run stylelint",
			"git add"
		]
	},
    "repository": {
        "type": "git",
        "url": "https://github.com/ofcyln/currency-exchange.git"
    },
	"private": true,
	"dependencies": {
		"@angular/animations": "^7.2.7",
		"@angular/cdk": "^7.0.2",
		"@angular/common": "^7.2.7",
		"@angular/compiler": "^7.2.7",
		"@angular/core": "^7.2.7",
		"@angular/forms": "^7.2.7",
		"@angular/http": "^7.2.7",
		"@angular/material": "^7.0.2",
		"@angular/platform-browser": "^7.2.7",
		"@angular/platform-browser-dynamic": "^7.2.7",
		"@angular/router": "^7.2.7",
		"@angular/service-worker": "^7.2.7",
		"@ngx-loading-bar/http-client": "^2.2.0",
		"bootstrap": "4.3.1",
		"core-js": "^2.5.4",
		"currency-symbol-map": "^4.0.4",
		"rxjs": "^6.4.0",
		"rxjs-tslint": "^0.1.7",
		"tslib": "^1.9.0",
		"zone.js": "^0.8.29"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^0.13.3",
		"@angular/cli": "^7.3.3",
		"@angular/compiler-cli": "^7.2.7",
		"@angular/language-service": "^7.2.7",
		"@types/jasmine": "^2.8.9",
		"@types/jasminewd2": "^2.0.5",
		"@types/node": "^10.12.2",
		"angular-spec-generator": "^1.1.0",
		"codelyzer": "^4.5.0",
		"firebase-tools": "^6.5.0",
		"husky": "^0.14.3",
		"jasmine-core": "^3.3.0",
		"jasmine-spec-reporter": "^4.2.1",
		"karma": "^4.0.1",
		"karma-chrome-launcher": "^2.2.0",
		"karma-cli": "^2.0.0",
		"karma-coverage": "^1.1.2",
		"karma-coverage-istanbul-reporter": "^2.0.5",
		"karma-jasmine": "^2.0.1",
		"karma-jasmine-html-reporter": "^1.4.0",
		"karma-trx-reporter": "^0.4.0",
		"lint-staged": "^4.3.0",
		"prettier": "^1.13.7",
		"protractor": "^5.4.1",
		"puppeteer": "^1.7.0",
		"stylelint": "^9.10.1",
		"stylelint-config-standard": "^18.2.0",
		"ts-node": "^7.0.1",
		"tslint": "^5.13.0",
		"typescript": "3.2.4",
		"webpack-bundle-analyzer": "^3.1.0"
	}
}
